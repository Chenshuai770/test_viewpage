<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl_ac_look_back"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">

            <ImageView
                android:layout_width="6dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                />
        </RelativeLayout>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的站单"
            android:textColor="@color/fontblack"
            android:textSize="15sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_ac_look_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="完成"
            android:textColor="@color/gray2"
            android:textSize="15sp" />



    </RelativeLayout>

    <android.support.design.widget.TabLayout

        android:id="@+id/tab_ac_look"
        app:tabSelectedTextColor="@color/blue3"
        app:tabTextColor="@color/fontblack"
        app:tabIndicatorColor="@color/blue3"
        app:tabBackground="@color/white"

        app:tabMode="fixed"
        android:layout_width="match_parent"
        android:layout_height="44dp">

    </android.support.design.widget.TabLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/xxx"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_ac_look"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>




</LinearLayout>